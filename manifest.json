{
  "manifest_version": 3,
  "name": "Wishlist Extension",
  "version": "1.0",
  "description": "An extension to manage your wishlist with product details, pricing, and site information.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon-48.png",
    "default_title": "Wishlist Extension"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ]
}
      "run_at": "document_end"
    }
  ]
}
